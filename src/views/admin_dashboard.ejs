<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Admin - Control Mec√°nico</title>
<link rel="manifest" href="/manifest.json">

<script>
  if ("serviceWorker" in navigator) {
    navigator.serviceWorker.register("/sw.js");
  }
</script>
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-title" content="Mec√°nico">
<link rel="apple-touch-icon" href="/img/logo-tomza-192.png">
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

  <!-- Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <!-- CSS propio -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-body">
  <!-- Topbar -->
  <header class="topbar d-flex align-items-center justify-content-between px-3">
    <div class="d-flex align-items-center gap-2">
      <img src="/img/logo-tomza-blanco.png" alt="Tomza" class="topbar-logo">
      <div class="d-flex flex-column">
        <span class="topbar-title">Panel de Administraci√≥n</span>
        <span class="topbar-subtitle">Control de horas y trabajos</span>
      </div>
    </div>

    <div class="d-flex align-items-center gap-3">
      <form method="GET" action="/admin" class="d-flex align-items-center gap-2 filter-form">
        <div class="d-flex flex-column">
          <label class="form-label small text-light mb-0">Desde</label>
          <input
            type="date"
            name="from"
            value="<%= from %>"
            class="form-control form-control-sm"
          >
        </div>
        <div class="d-flex flex-column">
          <label class="form-label small text-light mb-0">Hasta</label>
          <input
            type="date"
            name="to"
            value="<%= to %>"
            class="form-control form-control-sm"
          >
        </div>
        <button type="submit" class="btn btn-outline-light btn-sm mt-3 mt-md-4">
          Filtrar
        </button>
      </form>
      <a href="/logout" class="btn btn-outline-light btn-sm px-3">Salir</a>
    </div>
  </header>

  <main class="container py-3">
    <!-- Resumen -->
    <section class="row g-3 mb-2">
      <div class="col-12 col-sm-6 col-lg-3">
        <div class="card card-soft shadow-sm border-0 animate-fade">
          <div class="card-body py-2">
            <div class="small text-muted">Horas normales</div>
            <div class="d-flex align-items-baseline gap-1">
              <span class="h5 mb-0 fw-bold text-primary">
                <%= totalNormal.toFixed(2) %>
              </span>
              <span class="small text-muted">h</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 col-sm-6 col-lg-3">
        <div class="card card-soft shadow-sm border-0 animate-fade">
          <div class="card-body py-2">
            <div class="small text-muted">Horas extra</div>
            <div class="d-flex align-items-baseline gap-1">
              <span class="h5 mb-0 fw-bold text-danger">
                <%= totalExtras.toFixed(2) %>
              </span>
              <span class="small text-muted">h</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Asistencia -->
    <section class="card card-soft shadow-sm border-0 mb-3 animate-fade">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h2 class="h6 mb-0 d-flex align-items-center gap-2">
            <span class="badge bg-primary-soft rounded-circle icon-circle">
              ‚è±Ô∏è
            </span>
            Asistencia en el rango seleccionado
          </h2>
        </div>

        <% if (attendance.length === 0) { %>
          <p class="small text-muted mb-0">
            No hay registros de asistencia en el rango seleccionado.
          </p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-sm align-middle table-hover small">
              <thead class="table-light">
                <tr>
                  <th class="text-nowrap">Fecha</th>
                  <th class="text-nowrap">Nombre</th>
                  <th class="text-nowrap">Entrada</th>
                  <th class="text-nowrap">Salida</th>
                  <th class="text-nowrap">Normales</th>
                  <th class="text-nowrap">Extras</th>
                  <th class="text-nowrap">Fotos</th>
                </tr>
              </thead>
              <tbody>
                <% attendance.forEach(a => { %>
                  <tr>
                    <td class="text-nowrap">
                      <%= a.date.toISOString().slice(0,10) %>
                    </td>
                    <td><%= a.name %></td>
                    <td class="text-nowrap">
                      <%= a.check_in.toLocaleString('es-CR') %>
                    </td>
                    <td class="text-nowrap">
                      <%= a.check_out ? a.check_out.toLocaleString('es-CR') : '-' %>
                    </td>
                    <td><%= a.normal_hours %></td>
                    <td class="text-danger fw-semibold"><%= a.extra_hours %></td>
                    <td class="text-nowrap">
                      <% if (a.check_in_photo) { %>
                        <a href="<%= a.check_in_photo %>" target="_blank" class="me-1">
                          üì∏ Entrada
                        </a>
                      <% } %>
                      <% if (a.check_out_photo) { %>
                        <a href="<%= a.check_out_photo %>" target="_blank">
                          üì∏ Salida
                        </a>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </section>

    <!-- Trabajos -->
    <section class="card card-soft shadow-sm border-0 animate-fade">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h2 class="h6 mb-0 d-flex align-items-center gap-2">
            <span class="badge bg-primary-soft rounded-circle icon-circle">
              üìù
            </span>
            Trabajos en el rango seleccionado
          </h2>
        </div>

        <% if (jobs.length === 0) { %>
          <p class="small text-muted mb-0">
            No hay trabajos registrados en el rango seleccionado.
          </p>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-sm align-middle table-hover small">
              <thead class="table-light">
                <tr>
                  <th class="text-nowrap">Fecha</th>
                  <th class="text-nowrap">Nombre</th>
                  <th class="text-nowrap">Placa</th>
                  <th class="text-nowrap">Tipo</th>
                  <th>Detalle</th>
                </tr>
              </thead>
              <tbody>
                <% jobs.forEach(j => { %>
                  <tr>
                    <td class="text-nowrap">
                      <%= j.date.toISOString().slice(0,10) %>
                    </td>
                    <td><%= j.name %></td>
                    <td class="fw-semibold"><%= j.plate %></td>
                    <td><span class="badge bg-secondary-soft"><%= j.job_type %></span></td>
                    <td><%= j.description %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </section>
  </main>
</body>
</html>
