<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Ingreso - Control Mecánico</title>

  <!-- Bootstrap 5 -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
<link rel="manifest" href="/manifest.json">

<script>
  if ("serviceWorker" in navigator) {
    navigator.serviceWorker.register("/sw.js");
  }
</script>
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-title" content="Mecánico">
<link rel="apple-touch-icon" href="/img/logo-tomza-192.png">
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

  <!-- CSS propio -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-body">

  <div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="login-card shadow-sm p-4 rounded-4 bg-white">

      <div class="text-center mb-3">
        <img
          src="/img/logo-tomza-blanco.png"
          alt="Tomza"
          class="login-logo mb-2"
        >
        <h1 class="h5 fw-bold text-primary mb-0">Control de Mecánico Remoto</h1>
        <p class="text-muted small mb-0">Ingreso al sistema</p>
      </div>

      <form method="POST" action="/login" class="mt-3">
        <div class="mb-3">
          <label class="form-label small text-muted">Usuario</label>
          <input
            type="text"
            name="username"
            class="form-control form-control-sm"
            required
            autocomplete="username"
          >
        </div>

        <div class="mb-2">
          <label class="form-label small text-muted">Contraseña</label>
          <input
            type="password"
            name="password"
            class="form-control form-control-sm"
            required
            autocomplete="current-password"
          >
        </div>

        <% if (error) { %>
          <div class="alert alert-danger py-1 px-2 small mt-2">
            <%= error %>
          </div>
        <% } %>

        <button type="submit" class="btn btn-primary w-100 btn-sm mt-3">
          Ingresar
        </button>
      </form>

      <div class="mt-3 text-center small text-muted">
        <div>Admin: <code>admin / admin123</code></div>
        <div>Mecánico: <code>mecanico / mecanico123</code></div>
      </div>
    </div>
  </div>

</body>
</html>
